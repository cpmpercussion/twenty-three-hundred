{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "https://comp.anu.edu.au/courses/comp2300/assets/schemas/statement-of-originality#",
  "title": "Statement of Originality",
  "description": "Schema for validating statement-of-originality.md in COMP2300 assignments",
  "type": "object",
  "required": [
    "declaration",
    "name",
    "uid"
  ],
  "properties": {
    "declaration": {
      "type": "string",
      "minLength": 1
    },
    "uid": {
      "type": "string",
      "pattern": "^u[0-9]{7}$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    }
  }
}